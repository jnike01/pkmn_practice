script TestTown_Rival_House_ControlScript_GrandmaDialogueInit{
    setvar(VAR_RIVAL_HOUSE_STATE, 1)
    applymovement(1, TestTown_Rival_House_MovementScript_GrandmaFaceDoor)
    waitmovement(0)
    msgbox("Hey, {PLAYER}{KUN}!")
    return    
}

movement TestTown_Rival_House_MovementScript_GrandmaFaceDoor{
    face_left
}

movement TestTown_Rival_House_MovementScript_GrandmaFaceTable{
    face_right
}

movement TestTown_Rival_House_MovementScript_FaceGrandma{
    face_right
}

movement TestTown_Rival_House_MovementScript_FaceGrandmaTwo{
    face_up
}

movement TestTown_Rival_House_MovementScript_ToGrandmaOne{
    walk_up * 2
    walk_right * 4
}

movement TestTown_Rival_House_MovementScript_ToGrandmaTwo{
    walk_up
    walk_right * 3
}

movement TestTown_Rival_House_MovementScript_ToGrandmaThree{
    walk_up
    walk_right * 2
}

movement TestTown_Rival_House_MovementScript_ToGrandmaFour{
    walk_up * 2
    walk_right
}

