mapscripts TestTown_Rival_House_MapScripts{
    MAP_SCRIPT_ON_TRANSITION: TestTown_Rival_House_DefaultScript_DefaultState
}

script TestTown_Rival_House_DefaultScript_DefaultState{
    if(!(var(VAR_RIVAL_HOUSE_STATE))){
        setvar(VAR_RIVAL_HOUSE_STATE, 0)
    }
}

script TestTown_Rival_House_PersonScript_RivalGrandma{
    lock
    faceplayer
    msgbox("Hello, {PLAYER}{KUN}! I'm so proud of my\ngrandson and you for growing up so well!")
    release
    end
}

script TestTown_Rival_House_SignScript_TV{
    lock
    special(TurnOnTVScreen)
    msgbox("It's the original Wizard of Oz! Now that's an oldie.")
    special(TurnOffTVScreen)
    release
    end
}

script TestTown_Rival_House_TriggerScript_GrandmaDialogueScene_DirectionOne{
    lock
    applymovement(OBJ_EVENT_ID_PLAYER, TestTown_Rival_House_MovementScript_FaceGrandma)
    waitmovement(0)
    call(TestTown_Rival_House_ControlScript_GrandmaDialogueInit)
    applymovement(OBJ_EVENT_ID_PLAYER, TestTown_Rival_House_MovementScript_ToGrandmaOne)
    waitmovement(0)
    msgbox(TestTown_Rival_House_TextScript_GrandmaDialogue)
    applymovement(1, TestTown_Rival_House_MovementScript_GrandmaFaceTable)
    waitmovement(0)
    release
    end
}

