mapscripts GloriaTown_Your_House_MapScripts{
    MAP_SCRIPT_ON_TRANSITION: GloriaTown_Your_House_DefaultScript_OnTransition
}

script GloriaTown_Your_House_DefaultScript_OnTransition{
    setrespawn(HEAL_LOCATION_GLORIA_TOWN)
    end
}

script GloriaTown_Your_House_SignScript_TV{
    lock
    special(TurnOnTVScreen)
    msgbox("Breaking Bad seems to be on, that show\nis great!")
    special(TurnOffTVScreen)
    release
    end
}

script GloriaTown_Your_House_PersonScript_Mom{
    lock
    faceplayer
    if(flag(FLAG_ADVENTURE_STARTED)){
        msgbox(format("You and your Pokemon look tired. Please take this opportunity to rest..."))
        special(HealPlayerParty)
        fadescreen(FADE_TO_BLACK)
        playfanfare(MUS_HEAL)
        delay(120)
        fadescreen(FADE_FROM_BLACK)
        msgbox(format("You all look so much better now! If you feel fatigued and are in the area, remember you are always welcome to rest here. Stay safe out there honey!"))
    }
    else{
        msgbox(format("Please go do your errands honey, they're very important."))
    }
    release
    end
}

script GloriaTown_Your_House_TriggerScript_MomDialogueSceneOne_DirectionOne{
    lock
    call(GloriaTown_Your_House_ControlScript_MomDialogueInit)
    applymovement(OBJ_EVENT_ID_PLAYER, GloriaTown_Your_House_MovementScript_ToMomOne)
    waitmovement(0)
    msgbox(GloriaTown_Your_House_TextScript_MomDialogueOne)
    applymovement(1, GLORIA_TOWN_Your_House_MovementScript_MomFaceLeft)
    waitmovement(0)
    release
    end
}

script GloriaTown_Your_House_TriggerScript_MomDialogueSceneOne_DirectionTwo{
    lock
    applymovement(OBJ_EVENT_ID_PLAYER, GloriaTown_Your_House_MovementScript_PlayerFaceMomOne)
    waitmovement(0)
    call(GloriaTown_Your_House_ControlScript_MomDialogueInit)
    applymovement(OBJ_EVENT_ID_PLAYER, GloriaTown_Your_House_MovementScript_ToMomTwo)
    waitmovement(0)
    msgbox(GloriaTown_Your_House_TextScript_MomDialogueOne)
    applymovement(1, GLORIA_TOWN_Your_House_MovementScript_MomFaceLeft)
    waitmovement(0)
    release
    end
}

script GloriaTown_Your_House_TriggerScript_MomDialogueSceneOne_DirectionThree{
    lock
    applymovement(OBJ_EVENT_ID_PLAYER, GloriaTown_Your_House_MovementScript_PlayerFaceMomTwo)
    waitmovement(0)
    call(GloriaTown_Your_House_ControlScript_MomDialogueInit)
    applymovement(OBJ_EVENT_ID_PLAYER, GloriaTown_Your_House_MovementScript_ToMomThree)
    waitmovement(0)
    msgbox(GloriaTown_Your_House_TextScript_MomDialogueOne)
    applymovement(1, GLORIA_TOWN_Your_House_MovementScript_MomFaceLeft)
    waitmovement(0)
    release
    end
}

script GloriaTown_Your_House_ControlScript_MomDialogueInit{
    setvar(VAR_YOUR_HOUSE_STATE, 2)
    applymovement(1, GloriaTown_Your_House_MovementScript_MomFaceRight)
    waitmovement(0)
    msgbox("Hello, {PLAYER}{KUN}! Please come over and see me\nplease.")
    closemessage
    return
}

movement GloriaTown_Your_House_MovementScript_MomFaceRight{
    face_right
}

movement GLORIA_TOWN_Your_House_MovementScript_MomFaceLeft{
    face_left
}

movement GloriaTown_Your_House_MovementScript_ToMomOne{
    walk_down * 2
    walk_left * 2
}

movement GloriaTown_Your_House_MovementScript_ToMomTwo{
    walk_down * 3
    walk_left
}

movement GloriaTown_Your_House_MovementScript_ToMomThree{
    walk_down * 3
    walk_left * 3
}

movement GloriaTown_Your_House_MovementScript_PlayerFaceMomOne{
    face_down
}

movement GloriaTown_Your_House_MovementScript_PlayerFaceMomTwo{
    face_left
}

text GloriaTown_Your_House_TextScript_MomDialogueOne{
    format("The Professor came by this morning and told me that he wants you to stop by and see him to get your Starter and pokedex. Please be safe doing so and I love you {PLAYER}{KUN}. Also, make sure to see your friend beforehand like you said!")
}
