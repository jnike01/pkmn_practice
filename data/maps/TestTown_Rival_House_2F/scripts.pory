mapscripts TestTown_Rival_House_2F_MapScripts{}

script TestTown_Rival_House_2F_ControlScript_RivalFirstDialogueSetup{
    if(var(VAR_RIVAL_STATE) == 0){
        setflag(FLAG_RIVAL_INTRO)
    }
    else{
        clearflag(FLAG_RIVAL_INTRO)
    }
}

script TestTown_Rival_House_2F_PersonScript_RivalIntro{
    lock
    faceplayer
    msgbox("Placeholder Text")
    call(TestTown_Rival_House_2F_SequenceScript_RivalIntroFinish)
    release
    end
}

script TestTown_Rival_House_2F_SequenceScript_RivalIntroFinish{
    applymovement(OBJ_EVENT_ID_PLAYER, TestTown_Rival_House_2F_MovementScript_PlayerOutOfWay)
    waitmovement(0)
    applymovement(1, TestTown_Rival_House_2F_MovementScript_RivalLeaveRoom)
    waitmovement(0)
    removeobject(1)
    playse(SE_EXIT)
    setvar(VAR_RIVAL_STATE, 1)
    return
}

script TestTown_Rival_House_2F_SignScript_TV{
    lock
    special(TurnOnTVScreen)
    msgbox(format("Wow! It's Super Mario Sunshine! This game was pretty solid."))
    special(TurnOffTVScreen)
    release
    end
}

script TestTown_Rival_House_2F_SignScript_Gamecube{
    lock 
    msgbox("This Gamecube is in such good condition!")
    release
    end
}

script TestTown_Rival_House_2F_SignScript_Notebook{
    lock
    msgbox(TextTown_Rival_House_2F_TextScript_Notebook)
    release
    end
}

script TestTown_Rival_House_2F_SignScript_PC{
    lock
    msgbox("The computer is locked.")
    release
    end
}

movement TestTown_Rival_House_2F_MovementScript_RivalLeaveRoom{
    walk_left * 7
    walk_up
}

movement TestTown_Rival_House_2F_MovementScript_PlayerOutOfWay{
    walk_down
    face_up
}

